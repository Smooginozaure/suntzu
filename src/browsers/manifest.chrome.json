{
  "manifest_version": 3,
  "name": "Suntzu (FACEIT matchmaking insights)",
  "description": "Enhancing FACEIT experience with detailed matchmaking insights such as opponent's map drop probability and related statistics.",
  "version": "0.1.0",
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.faceit.com/*",
    "https://open.faceit.com/*",
    "https://www.faceit.com/*"
  ],
  "background": {
    "service_worker": "{{service}}"
  },
  "content_scripts": [
    {
      "js": ["{{content}}"],
      "matches": ["https://www.faceit.com/*"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_title": "Suntzu (settings)",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
